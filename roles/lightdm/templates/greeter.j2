[greeter]
debug_mode          = false
detect_theme_errors = true
screensaver_timeout = 300
secure_mode         = true
time_format         = LT
time_language       = auto
webkit_theme        = lightdm-webkit2-{{ theme }}

[branding]
background_images = /usr/share/backgrounds
logo              = /usr/share/pixmaps/{{ ansible_os_family | lower }}.svg
user_image        = /usr/share/pixmaps/{{ ansible_os_family | lower }}.svg